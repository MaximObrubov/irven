<div class="verb-card verb-<%= verb.id %>">

  <div class="card-body">
    <div class="card-title"><%= verb.infinitiv %></div>

    <div class="flip-card translation">
      <div class="flip-card-inner">
        <div class="flip-card-front">
          <span>Show translation</span>
        </div>
        <div class="flip-card-back">
          <%= verb.translations %>
        </div>
      </div>
    </div>

    <div class="answer-container">
      <%= form_with url: root_path do |f| %>
      <%= f.text_field :presens, placeholder: "presens" %>
      <%= f.text_field :preteritum, placeholder: "preteritum" %>
      <%= f.text_field :partizip_zwei, placeholder: :partizip_zwei %>
      <% end %>
    </div>
    <div class="btn-container">
      <a href="#" class="btn btn-primary card-check">Check</a>
    </div>
  </div>

</div>
